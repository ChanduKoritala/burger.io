<img src="/assets/hamburger.png" alt="burger" class= "center" style ="width:50px">
<h1>Burger App!</h1>
<br>
<div class="container">
  <div class="row">
    
    <div class="col-sm-4 col-md-4">
      <ul>
        <h3>Added Burgers!</h3>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="row">
      <div class="col-sm-4 col-md-4">
        <form class="burger-form">
          <div class="form-group">
            <label for="bg"></label>
            <input type="textarea" id="bg" name="burger_name" placeholder="Enter Burger Name">
          </div>
          <button type="submit" id="submit">Submit</button>
        </form>
      </div>
    </div>

    <div class="col-sm-4 col-md-4">
      <ul>
        <h3>Devoured Burgers!</h3>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>

</div>